#include "General.h"


void adjustHeap(int arr[],int start,int end){
	int tmp = arr[start];
	int i;
	for(i=2*start+1;i<end;i*=2){
		if(arr[i] > arr[i+1]) i++;
		if(arr[i] < arr[start]) break;
		int temp = arr[i];
		arr[i] = arr[start];
		arr[start] = temp;
		start = i;
	}
}

